QWidget {
    background-color: #f0f0f0;
    color: #333;
}

QPushButton {
    background-color: transparent;
    border: none;
    padding: 5px;
}

QPushButton:hover {
    background-color: #e0e0e0;
}

QListWidget {
    background-color: white;
    color: #333;
    border: 1px solid #ccc;
}

QComboBox {
    background-color: white;
    color: #333;
    border: 1px solid #ccc;
}

QLabel {
    color: #333;
    padding: 5px;
    text-align: center;
}

QSlider {
    background-color: #f0f0f0;
}